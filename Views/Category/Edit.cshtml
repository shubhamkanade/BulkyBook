@model Category 
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2 ml-2">
            <h2 class="text-primary">Edit Category</h2>
        </div>
        <hr />
        <div class="mb-2">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="mb-2">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span class="text-danger" asp-validation-for="DisplayOrder"></span>
        </div>
        <div class="mb-2">
            <button class="btn btn-primary">Update</button>
            <a asp-controller ="Category" asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
                @{
                <partial name="_ValidationScriptsPartial"/>
            }
            }