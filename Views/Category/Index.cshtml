@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>
                Category List
            </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create New Category</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td width="50%">
                    @category.Name
                </td>
                <td width="30%">
                    @category.DisplayOrder
                </td>
                <td class="w-75 btn-group" role="group">
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn-sm btn-primary mx-1"><i class="bi bi-pencil-square"></i> Edit</a>
                    <a asp-controller="Category" asp-action="Remove" asp-route-id="@category.Id" class="btn-sm btn-danger mx-1"><i class="bi bi-trash-fill"></i> Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>